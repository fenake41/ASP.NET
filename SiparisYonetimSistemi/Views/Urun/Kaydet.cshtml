@model SiparisYonetimSistemi.Models.Urun
@{
    ViewBag.Title = "Ürün Kaydet";
}

<h2>Kaydet</h2>

<div class="container" style="padding-top:20px">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-md-2">Ürün ID</div>
            <div>@Html.TextBoxFor(Model => Model.UrunId, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-2">Ürün Adı</div>
            <div>@Html.TextBoxFor(Model => Model.UrunAdi, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-2">Stok Kodu</div>
            <div>@Html.TextBoxFor(Model => Model.StokKodu, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-2">Alış Fiyatı</div>
            <div>@Html.TextBoxFor(Model => Model.AlisFiyat, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-2">Satış Fiyatı</div>
            <div>@Html.TextBoxFor(Model => Model.SatisFiyat, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-2">Ürün Durum</div>
            <div>@Html.CheckBoxFor(Model => Model.UrunDurum, new { @class = "form-check-input" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-2">Açıklama</div>
            <div>@Html.TextAreaFor(Model => Model.Aciklama, new { @class = "form-control", row = 5, col = 20 })</div>
        </div>

        <div class="col-md-4 text-center">
            <button id="btnKaydet" class="btn btn-success">Kaydet</button>
        </div>
    }


</div>

