@model IEnumerable<SiparisYonetimSistemi.Models.Urun>

@{
    ViewBag.Title = "Ürün Sayfası";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Kaydet")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlisFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SatisFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunDurum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlisFiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SatisFiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunDurum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Duzenle", new {  id=item.UrunId  }) |
            @Html.ActionLink("Detay", "Detay", new {  id=item.UrunId  }) |
            @Html.ActionLink("Sil", "Sil", new {  id=item.UrunId  })
        </td>
    </tr>
}

</table>
